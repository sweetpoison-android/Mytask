<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.LoginActivity"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rechargeStatus_constraintlayout1"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@drawable/login_image_backgound"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rechargeStatus_profileimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/mytasklogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/rechargeStatus_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="225dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/rechargeStatus_rechargeStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Recharge Status"
                    android:textColor="@color/logingradientstartcolor"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



                    <TextView
                        android:id="@+id/rechargeStatus_numberText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number"
                        android:textSize="16sp"

                        android:textColor="@color/logingradientstartcolor"
                       android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rechargeStatus_rechargeStatusText"
                        />

                <TextView
                    android:id="@+id/rechargeStatus_amountText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/logingradientstartcolor"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rechargeStatus_numberText"

                    />
                <TextView
                    android:id="@+id/rechargeStatus_statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="16sp"
                    android:textColor="@color/logingradientstartcolor"
                   android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rechargeStatus_amountText"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingBottom="50dp"/>




            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/rechargeStatus_cardOkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="130dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="15dp"
            app:layout_constraintBottom_toBottomOf="@id/rechargeStatus_cardview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rechargeStatus_cardview">

            <Button
                android:id="@+id/rechargeStatus_okButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/logingradientstartcolor"
                android:paddingVertical="10dp"
                android:text="OK"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/prepaidrecharge_textviewCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text=""
            android:textColor="@color/logingradientstartcolor"
            android:textSize="16sp"

            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rechargeStatus_cardOkButton"
            android:paddingBottom="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>