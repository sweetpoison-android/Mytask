<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <LinearLayout
               android:id="@+id/rechargeReportItemLayout1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <ImageView
                   android:id="@+id/rechargeReportItemImg"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/mytasklogo"
                   android:layout_marginLeft="10dp"
                   android:padding="5dp" />
               <LinearLayout
                   android:id="@+id/rechargeReportItemLayout2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@id/rechargeReportItemLayout1"
                   android:orientation="vertical"
                   android:layout_gravity="center_vertical">
                   <TextView
                       android:id="@+id/rechargeReportItemOperatorName"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="operator name"
                       android:textSize="14sp"
                       android:textStyle="bold"
                       android:textColor="@color/black"
                       android:layout_marginLeft="10dp"
                       android:textFontWeight="5"/>
                   <TextView
                       android:id="@+id/rechargeReportItemDate"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Date"
                       android:layout_marginLeft="10dp"
                       android:textSize="12sp"/>
                   <TextView
                       android:id="@+id/rechargeReportItemBalance"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="balance"
                       android:textSize="13sp"
                       android:layout_marginLeft="10dp"
                       android:textColor="@color/logingradientstartcolor"
                       android:textStyle="bold"/>
               </LinearLayout>


               <ImageView
                   android:id="@+id/rechargeReportItemInfoImg"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/info"
                   android:padding="5dp"
                   android:layout_marginLeft="80dp"
                   android:layout_gravity="center_vertical"/>


           </LinearLayout>

            <LinearLayout
                android:id="@+id/rechargeReportItemMainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/rechargeReportItemLayout1"
                android:layout_marginHorizontal="10dp"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number : "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction ID : "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount : "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Commission : "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SurCharge : "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cost : "
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/rechareReportItemNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5786589 "
                        android:textSize="12sp"
                        android:textColor="@color/logingradientstartcolor"
                        />
                    <TextView
                        android:id="@+id/rechareReportItemTransactionId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NA "
                        android:textSize="12sp"
                        android:textColor="@color/logingradientstartcolor"/>
                    <TextView
                        android:id="@+id/rechareReportItemAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 : "
                        android:textSize="12sp"
                        android:textColor="@color/logingradientstartcolor"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/rechareReportItemCommission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 : "
                        android:textSize="12sp"
                        android:textColor="@color/logingradientstartcolor"
                        />
                    <TextView
                        android:id="@+id/rechareReportItemSurcharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 : "
                        android:textSize="12sp"
                        android:textColor="@color/logingradientstartcolor" />
                    <TextView
                        android:id="@+id/rechareReportItemCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cost : "
                        android:textSize="12sp"
                        android:textColor="@color/logingradientstartcolor" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/rechargeReportItemView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/logingradientstartcolor"
                android:layout_below="@id/rechargeReportItemMainLayout"
               android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"/>


            <TextView
                android:id="@+id/rechargeReportItemTransactionStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rechargeReportItemView"
                android:text="Transaction Failed"
               android:textStyle="bold"
                android:textColor="#7A0505"
                android:padding="5dp"
               android:gravity="center_horizontal"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>